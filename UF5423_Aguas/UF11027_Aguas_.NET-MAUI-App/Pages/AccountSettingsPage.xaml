<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="UF11027_Aguas_.NET_MAUI_App.Pages.AccountSettingsPage"
             Title="Account Settings">

    <Grid RowDefinitions="Auto,5*,1*" RowSpacing="0">
        <VerticalStackLayout Grid.Row="0" Spacing="1" Padding="20"
                         BackgroundColor="Cyan" VerticalOptions="Start">
            <ImageButton x:Name="image_imgBtn" Source="userimage.png"
                         Aspect="AspectFill" CornerRadius="125"
                         WidthRequest="150" HeightRequest="150"/>
            <Label x:Name="name_lbl" FontSize="Medium" HorizontalOptions="Center"/>
        </VerticalStackLayout>

        <VerticalStackLayout Grid.Row="1" Margin="20" Spacing="20">
            <Entry x:Name="name_entry" Placeholder="Name" FontSize="12"/>
            <Button Text="Save" x:Name="save_btn" Clicked="save_btn_Clicked"
                    FontSize="Small" FontAttributes="Bold"
                    BackgroundColor="#2ea3f2"/>
        </VerticalStackLayout>

        <ImageButton Grid.Row="2" Source="password.png"
                     x:Name="changePassword_imgBtn" ToolTipProperties.Text="Changed Password"
                     BackgroundColor="Transparent" Padding="5"
                     WidthRequest="60"
                     HeightRequest="60" HorizontalOptions="Center"/>
    </Grid>
</ContentPage>