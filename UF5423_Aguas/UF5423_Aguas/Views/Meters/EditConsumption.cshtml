@model UF5423_Aguas.Data.Entities.Consumption

@{
    ViewData["Title"] = "Edit consumption";
}

<h2>Edit consumption</h2>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="EditConsumption">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
